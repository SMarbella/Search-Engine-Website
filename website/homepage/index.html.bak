<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KnowsMore - Isn't that interesting?</title>
    <link rel="icon" type="image/png" href="https://knowsmore.wordpress.com/wp-content/uploads/2025/05/knowsmore-eyes-closed-e1748183789645.png"
      sizes="16x16">
    <style>
			img[Attributes Style] {
			  			float: left;
			  			vertical-align: top;
			}
			      img {
			  		overflow-clip-margin: content-box;
			  		overflow: clip;
			}

			      html, body {
					height: 100%;
			              margin: 0;
			              display: flex;
							flex-direction: column;
					font-family: Arial, Helvetica, sans-serif;
					background-image: url('https://knowsmore.wordpress.com/wp-content/uploads/2025/05/knowsmore-pattern.png');
				    background-color: #D7F2E6;
					background-repeat: repeat;
				}
			:root {
				 	--search: 60px;
				 	--lgray: #d5d3d5;
				}

			::selection{
				    background:var(--lgray);
				}

			.searchbar{

				    background:white;
				    font-weight:bold;
				    width:720px;
				    user-select:none;
				    height:var(--search);
				    border-radius:10px;
				    border: 2px solid;
				    border-color:var(--lgray);
				    border-bottom-width:4px
				  }

			.searchbar>input{
			         height:var(--search);
			         margin:0;
			         padding:0;
			         border:none;
			         background:none;
			         width:80%;
			         font-size:24pt;
			         color:#222;
			         font-weight:bold
			         }

			.searchbar>input:focus{
			         border:none;
			         outline:none;
			         background:none
			         }

			.searchbar>img{
			         pointer-events:none;
			         height:var(--search)
			         }

			.sbutton{
			         background:#81cea5;
			         border:2px solid #86c2a7;
			         font-size:18pt;
			         font-weight:bold;
			         color:white;
			         padding:4px 48px;
			         border-radius:10px
			         }

			.sbutton:active{
			         filter:brightness(75%)
			         }

			   .navbar {
			     background-color: #333;
			     padding: 16px 30px 2px 30px;
			     display: flex;
			     align-items: center;
			   }

			   .brand {
			     display: flex;
			     align-items: center;
			     margin-right: auto;
			   }

			   .brand img {
			     height: 40px;
			     margin-right: 8px;
			   }

			   .brand span {
			     color: white;
			     font-weight: bold;
			     font-size: 14px;
			   }

			   .navbar a {
			     color: white;
			     text-decoration: none;
			     margin-left: 20px;
			     margin-top: 25px;
			     font-weight: bold;
			   }

			   .navbar a:hover {
			     text-decoration: underline;
			   }

			.center {
			  display: block;
			  margin-left: auto;
			  margin-right: auto;
			  width: 50%;
			}

			p {
			  margin-top: 100px;
			}

			         /* Style the footer */

			.footer {
			  background-color: #D5D3D5;
			  color: black;
			  text-align: right;
			  padding: 10px 30px 20px 0px;
			  font-size: 14px;
			}

			   .footer a {
			     color: black;
			     margin: 0px 10px;
			     text-decoration: none;
			     font-weight: bold;
			   }

			   .footer a:hover {
			     text-decoration: underline;
			   }
		</style>
  </head>
  <body>
    <!-- Header menu -->
    <div class="navbar">
      <div class="brand"> <img src="https://knowsmore.wordpress.com/wp-content/uploads/2025/05/cropped-embeddedimage-1-1.png"
          alt="Brand Logo"> </div>
      <a href="#">email</a> <a href="#">FAQ</a> <a href="#">accounts</a> <a href="#">update</a>
      <a href="#">what’s new?</a> </div>
    <!-- Main content -->
    <main style="flex: 1;">
      <div align="center">
        <p> <a href="https://knowsmore.nekoweb.org/"> <img src="https://knowsmore.wordpress.com/wp-content/uploads/2025/05/powered-by-knowsmore.png?w=768"
              alt="KnowsMore" style="width:768px;height:218px;" class="center">
          </a> </p>
        <div class="searchbar"> <img src="https://knowsmore.wordpress.com/wp-content/uploads/2025/05/searchicon.png"
            align="left"> <input placeholder="Search" type="text"> <img src="https://knowsmore.wordpress.com/wp-content/uploads/2025/05/mic.png"
            align="right"> </div>
        <!-- Move the button OUTSIDE the searchbar --> <br>
        <br>
        <button class="sbutton" onclick="announce()">SEARCH</button> </div>
    </main>
    <!-- Footer -->
    <footer class="footer">
      <div class="footer-links"> <a href="#">Privacy</a> <a href="#">Terms</a>
        <a href="#">Settings</a> </div>
    </footer>
  </body>
</html>
